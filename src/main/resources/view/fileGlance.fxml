<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.wcheng.dataimporter.controller.FileGlanceController"
      stylesheets="/css/common.css">
    <ScrollPane fx:id="scrollPane">
        <GridPane fx:id="sampleData" hgap="10" vgap="10"></GridPane>
    </ScrollPane>
    <Text text="Show up to 5 rows" />
    <HBox alignment="CENTER_RIGHT">
        <Button text="OK" onAction="#toNextView" />
    </HBox>
</VBox>
